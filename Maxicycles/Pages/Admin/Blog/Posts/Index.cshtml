@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Post[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post[0].Excerpt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post[0].UploadedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post[0].MaxicyclesUser)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Post)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Excerpt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxicyclesUser.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="/Blog/Details" asp-route-id="@item.Id">View on website</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>