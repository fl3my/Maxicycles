@page
@model Maxicycles.Pages.Admin.Store.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr/>
<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control"/>
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Slug" class="control-label"></label>
                <input asp-for="Product.Slug" class="form-control"/>
                <span asp-validation-for="Product.Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control"/>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control"/>
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SubCategoryId" class="control-label">Sub Category Name</label>
                <select asp-for="Product.SubCategoryId" class="form-control" asp-items="ViewBag.SubcategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.ImageId" class="control-label">Image Name</label>
                <select asp-for="Product.ImageId" class="form-control" asp-items="ViewBag.ImageId"></select>
            </div>
            Upload an image <a asp-page="/Admin/Images/Create">here</a>.
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>