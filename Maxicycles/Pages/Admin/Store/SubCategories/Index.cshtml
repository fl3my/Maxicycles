@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Sub Categories</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form class="d-inline-flex">
    <select asp-for="@Model.ParentCategoryId" class="form-select" asp-items="ViewBag.ParentCategoryId">
        <option>All</option>
    </select>
    <input type="submit" value="Filter" class="btn btn-primary"/>
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory[0].Title)
        </th>
        <th>
            Parent Category
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.SubCategory)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Title)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>