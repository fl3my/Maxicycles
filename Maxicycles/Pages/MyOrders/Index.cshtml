@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Orders</h1>
<hr />

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].RequiredDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].ShippedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].OrderStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order[0].DeliveryMethod)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Order)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @(item.ShippedDate == null ? "Not Shipped Yet" : item.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                Â£@Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryMethod.Title)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                <a asp-page="./Cancel" asp-route-id="@item.Id">Request Cancellation</a>
            </td>
        </tr>
    }
    </tbody>
</table>