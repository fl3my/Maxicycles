@page
@model Maxicycles.Pages.Basket.AddServiceModel

@{
    ViewData["Title"] = "AddService";
}

<h1>AddService</h1>

<h4>BasketItem</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="BasketService.Quantity" value="1"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BasketService.ServiceDate" class="control-label"></label>
                <input asp-for="BasketService.ServiceDate" class="form-control"/>
                <span asp-validation-for="BasketService.ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasketService.Item.Title" class="control-label"></label>
                <p>@Model.BasketService.Item.Title</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
