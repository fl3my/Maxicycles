@page
@using Maxicycles.Models
@model Maxicycles.Pages.Basket.AddServiceModel

@{
    ViewData["Title"] = "AddService";
}

<h1>Add Service</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="BasketService.Quantity" value="1"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BasketService.Item.Title" class="control-label"></label>
                <input asp-for="BasketService.Item.Title" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="BasketService.Item.Price" class="control-label"></label>
                <input asp-for="BasketService.Item.Price" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="BasketService.ServiceDate" class="control-label"></label>
                <input asp-for="BasketService.ServiceDate" class="form-control"/>
                <span asp-validation-for="BasketService.ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Add to Basket" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Items/Details" asp-route-slug="@Model.BasketService.Item.Slug">Back to Service</a>
</div>