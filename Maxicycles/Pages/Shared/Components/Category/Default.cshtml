@using Maxicycles.Models
@model System.Collections.Generic.List<Maxicycles.Models.Category>

<ul class="navbar-nav">
    @foreach (var category in Model)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @category.Title
            </a>
            <ul class="dropdown-menu dropdown-menu-dark">
                <li><a class="dropdown-item" asp-page="/Products/Index" asp-route-category="@category.Slug" asp-route-subCategory=@null>View all</a></li>
                @foreach (var subCategory in category.SubCategories)
                {
                    <li><a class="dropdown-item" asp-page="/Products/Index" asp-route-category="@category.Slug" asp-route-subCategory="@subCategory.Slug">@subCategory.Title</a></li>
                }
            </ul>
        </li>
    }
</ul>